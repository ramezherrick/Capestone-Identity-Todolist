@model List<Todo>
<style>
    body {
        background-color: black;
    }
</style>
<h1 style="color:white">Search items by due date</h1>


<form style="color:white" action="../Home/SortByDueDate" method="post">
    <label style="color:white" for="date">Date:</label>
    <input type="date" name="date" />
    <input style="background-color:black" type="submit" value="Find Tasks" class="btn btn-primary" />
</form>
<br />
<br />
<table style="color:white" class="table">
    <tr style="color:white" class="d-table-row">
        <th>Item</th>
        <th>Due Date</th>
        <th>Completion Status</th>
    </tr>
    @if (Model != null)
    {
        foreach (Todo todo in Model)
        {
            <tr class="d-table-row">
                <th>@todo.Item</th>
                @if (todo.DueDate < DateTime.Now && todo.Completed == false)
                {
                    <td style="color:red">@todo.DueDate.ToShortDateString()</td>
                    <td style="color:red">@todo.Completed</td>

                }

                else
                {
                    <td style="color:white">@todo.DueDate.ToShortDateString()</td>
                    <td style="color:white">@todo.Completed</td>

                }
            </tr>
        }
    }
</table>
<a href="../Home/Index" class="btn btn-primary">Home</a>


